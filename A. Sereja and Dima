import java.util.*;
 
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
 
        int n = sc.nextInt();
        int[] a = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
 
        int l = 0;
        int r = n - 1; 
        
        int sereja = 0;
        int dima = 0;
        
        boolean flag = true;
 
        while (l <= r) {
            int pick;
            if (a[l] >= a[r]) {
                pick = a[l];
                l++;
            } else {
                pick = a[r];
                r--;
            }
 
            if (flag) {
                sereja += pick;
            } else {
                dima += pick;
            }
            flag = !flag;
        }
 
        System.out.println(sereja + " " + dima);
        sc.close();
    }
}
